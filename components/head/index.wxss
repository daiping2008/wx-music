.container{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height:100rpx;
  background-color: #222;
  color: #c7a315;
  font-size:40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.title{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.title image{
  width: 90rpx;
  height: 96rpx;
  transform: scale(0.7);
  margin-left: 64rpx;
}
.me {
  flex: 0 0 64rpx;
  width: 64rpx;
  height: 64rpx;
}
